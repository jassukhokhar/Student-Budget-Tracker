<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    <style>
        .content {
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            margin-top: 20px;
        }
        .main {
            background-color: #4f5f67;
            border-radius: 10px;
            padding: 1rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.8);
            box-shadow: 20px 20px 50px rgba(0, 0, 0, 0.5);
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.15);
            overflow: hidden;
            border-top: 1px solid rgba(255, 255, 255, 0.5);
            border-left: 1px solid rgba(255,255,255,0.5);
            height: 300px;
            width: 400px;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }
        .main h1 {
            color: orange;
            margin-bottom: 15px;
        }
        .main input {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .delete {
            width: 100%;
            padding: 10px;
            background-color: rgb(246, 70, 70);
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
        }
        .delete:hover {
            background-color: rgb(207, 77, 77);
        }
    </style>
</head>
<body>
    <div class="navbar">
        <%- include('../includes/navbar.ejs') %>
    </div>
    <%- include('../includes/flash.ejs') %>

    <div class="content">
        <div class="main">
            <h1><span id="title"></span></h1>
            <label for="username">Username: <input type="text" readonly value="<%= username %>"></label>
            <label for="email">Email: <input type="text" readonly value="<%= email %>"></label>

            <!-- Delete Account Form -->
            <form method="POST" action="/profile?_method=DELETE">
                <button type="submit" class="delete">Delete Account</button>     
            </form>
        </div>
    </div>

    <%- include('../includes/footer.ejs') %>
    <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
    <script>
     var typed = new Typed('#title', {
     strings: ['Profile'],
     typeSpeed: 100,
     loop:true
     });
   </script>
</body>
</html>
